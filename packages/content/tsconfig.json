{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "declaration": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "data/**/*"
    ]
}